    "version": "0.2.0",
    "configurations": [
        {
            "type": "debugpy",
            "request": "launch",
            "name": "Jac: Debug Current File",
            "python": "${command:extension.jaclang-extension.getPythonPath}",
            "program": "${command:extension.jaclang-extension.getJacPath}",
            "args": [
                "run",
                "${file}"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}